[difftool]
  tool = nvimdiff
  prompt = false

[difftool "vscode"]
  cmd = "code --wait --diff $LOCAL $REMOTE"

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

